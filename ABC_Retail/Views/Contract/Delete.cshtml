@{
    ViewData["Title"] = "Delete Contract";
    var fileName = ViewBag.FileName as string;
}

<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h1>Delete Contract</h1>
            <hr />

            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h4>
                <p>Are you sure you want to delete this contract? This action cannot be undone.</p>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Contract Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">File Name:</dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-file-earmark"></i> @fileName
                        </dd>

                        <dt class="col-sm-3">Storage Location:</dt>
                        <dd class="col-sm-9">
                            <small class="text-muted">Azure File Share: retail-fileshare</small>
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-3">
                <input type="hidden" name="fileName" value="@fileName" />
                <button type="submit" class="btn btn-danger me-2"
                        onclick="return confirm('Are you sure? This action cannot be undone!')">
                    <i class="bi bi-trash-fill"></i> Yes, Delete Contract
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>