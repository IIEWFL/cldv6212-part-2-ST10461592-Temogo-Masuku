@model IEnumerable<ABC_Retail.Models.AuditLog>

@{
    ViewData["Title"] = "Audit Logs";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Audit Logs</h1>
                <div class="btn-group">
                    <a asp-action="Export" asp-route-format="json" class="btn btn-outline-primary">Export JSON</a>
                    <a asp-action="Export" asp-route-format="csv" class="btn btn-outline-success">Export CSV</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Audit Logs Table -->
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Message ID</th>
                            <th>Insertion Time</th>
                            <th>Message Preview</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model)
                        {
                            <tr>
                                <td>
                                    <code>@(log.MessageId ?? "N/A")</code>
                                </td>
                                <td>
                                    @if (log.InsertionTime.HasValue)
                                    {
                                        <span>@log.InsertionTime.Value.ToString("yyyy-MM-dd HH:mm:ss")</span>
                                        <br />
                                        <small class="text-muted">@log.InsertionTime.Value.ToString("ddd")</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    <div class="message-preview" style="max-width: 400px;">
                                        @if (!string.IsNullOrEmpty(log.MessageText))
                                        {
                                            var preview = log.MessageText.Length > 100 ? log.MessageText.Substring(0, 100) + "..." : log.MessageText;
                                            <span>@preview</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No message content</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-messageId="@log.MessageId"
                                       class="btn btn-sm btn-outline-info" title="View Details">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info mt-3">
                    <h4 class="alert-heading">No audit logs found!</h4>
                    <p>There are no audit logs to display. Logs will appear here as system activities occur.</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .message-preview {
        font-family: 'Courier New', monospace;
        font-size: 0.9em;
        word-break: break-word;
    }
</style>