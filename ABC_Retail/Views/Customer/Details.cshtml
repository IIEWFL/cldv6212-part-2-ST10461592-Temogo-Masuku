@model ABC_Retail.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Customer Details</h1>
                <div>
                    <a asp-action="Edit"
                       asp-route-partitionKey="@Model.PartitionKey"
                       asp-route-rowKey="@Model.RowKey"
                       class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- Profile Photo and Basic Info -->
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.CustomerPhotoUrl))
                    {
                        <img src="@Model.CustomerPhotoUrl" alt="@Model.Name @Model.Surname"
                             class="rounded-circle mb-3" style="width:150px; height:150px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width:150px; height:150px; color:white; font-size:48px; font-weight:bold;">
                            @(Model.Name?.Substring(0, 1) ?? "")@(Model.Surname?.Substring(0, 1) ?? "")
                        </div>
                    }

                    <h3>@Model.Name @Model.Surname</h3>
                </div>
            </div>

            <!-- Azure Storage Info -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6 class="mb-0">Azure Storage Details</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            <strong>Partition Key:</strong>
                        </div>
                        <div class="col-6">
                            <code>@Model.PartitionKey</code>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Row Key:</strong>
                        </div>
                        <div class="col-6">
                            <code>@Model.RowKey</code>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <strong>Timestamp:</strong>
                        </div>
                        <div class="col-6">
                            <small>@Model.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detailed Information -->
        <div class="col-md-8">
            <!-- Contact Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person-lines-fill"></i> Contact Information
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-sm-9">
                            <a href="mailto:@Model.Email" class="text-decoration-none">
                                <i class="bi bi-envelope"></i> @Model.Email
                            </a>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Phone:</strong>
                            </div>
                            <div class="col-sm-9">
                                <a href="tel:@Model.PhoneNumber" class="text-decoration-none">
                                    <i class="bi bi-telephone"></i> @Model.PhoneNumber
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Address Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt-fill"></i> Address Information
                    </h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StreetAddress))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Street Address:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.StreetAddress
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>City:</strong>
                        </div>
                        <div class="col-sm-9">
                            @(Model.City ?? "Not specified")
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Province))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Province:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.Province
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.PostalCode))
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3">
                                <strong>Postal Code:</strong>
                            </div>
                            <div class="col-sm-9">
                                @Model.PostalCode
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>Country:</strong>
                        </div>
                        <div class="col-sm-9">
                            @(Model.Country ?? "South Africa")
                        </div>
                    </div>

                    <!-- Full Address Display -->
                    @{
                        var addressParts = new List<string>();
                        if (!string.IsNullOrEmpty(Model.StreetAddress)) addressParts.Add(Model.StreetAddress);
                        if (!string.IsNullOrEmpty(Model.City)) addressParts.Add(Model.City);
                        if (!string.IsNullOrEmpty(Model.Province)) addressParts.Add(Model.Province);
                        if (!string.IsNullOrEmpty(Model.PostalCode)) addressParts.Add(Model.PostalCode);
                        if (!string.IsNullOrEmpty(Model.Country)) addressParts.Add(Model.Country);
                        var fullAddress = string.Join(", ", addressParts);
                    }

                    @if (!string.IsNullOrEmpty(fullAddress))
                    {
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Full Address:</strong>
                            </div>
                            <div class="col-sm-9">
                                <div class="border rounded p-2 bg-light">
                                    <i class="bi bi-map"></i> @fullAddress
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Photo Information -->
            @if (!string.IsNullOrEmpty(Model.CustomerPhotoUrl))
            {
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-image"></i> Photo Storage Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <strong>Photo URL:</strong>
                            </div>
                            <div class="col-sm-9">
                                <small class="text-muted">
                                    <code>@Model.CustomerPhotoUrl</code>
                                </small>
                                <br />
                                <small class="text-info">
                                    <i class="bi bi-cloud"></i> Stored in Azure Blob Storage
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex gap-2">
                <a asp-action="Edit"
                   asp-route-partitionKey="@Model.PartitionKey"
                   asp-route-rowKey="@Model.RowKey"
                   class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit Customer
                </a>
                <a asp-action="Delete"
                   asp-route-partitionKey="@Model.PartitionKey"
                   asp-route-rowKey="@Model.RowKey"
                   class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete this customer?')">
                    <i class="bi bi-trash"></i> Delete Customer
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>