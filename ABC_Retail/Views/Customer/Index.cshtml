@model IEnumerable<ABC_Retail.Models.Customer>
<h1>Customers</h1>

<!-- Notification Display Section -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<a class="btn btn-primary" asp-action="Create">Add New Customer</a>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Partition Key</th>
                <th>Row Key</th>
                <th>Timestamp</th>
                <th>Customer Photo</th>
                <th>Full Name</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Address</th>
                <th>City</th>
                <th>Province</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.PartitionKey</td>
                    <td>@customer.RowKey</td>
                    <td>@customer.Timestamp?.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(customer.CustomerPhotoUrl))
                        {
                            <img src="@customer.CustomerPhotoUrl" style="width:50px; height:50px; object-fit:cover;"
                                 class="img-fluid rounded-circle" alt="@customer.Name photo" />
                        }
                        else
                        {
                            <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center"
                                 style="width:50px; height:50px; color:white; font-weight:bold; font-size:14px;">
                                @(customer.Name?.Substring(0, 1) ?? "")@(customer.Surname?.Substring(0, 1) ?? "")
                            </div>
                        }
                    </td>
                    <td>@customer.Name @customer.Surname</td>
                    <td>
                        <a href="mailto:@customer.Email" class="text-decoration-none">@customer.Email</a>
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(customer.PhoneNumber))
                        {
                            <a href="tel:@customer.PhoneNumber" class="text-decoration-none">@customer.PhoneNumber</a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>@(customer.StreetAddress ?? "-")</td>
                    <td>@(customer.City ?? "-")</td>
                    <td>@(customer.Province ?? "-")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details"
                               asp-route-partitionkey="@customer.PartitionKey"
                               asp-route-rowKey="@customer.RowKey"
                               class="btn btn-sm btn-outline-info" title="View Details">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit"
                               asp-route-partitionKey="@customer.PartitionKey"
                               asp-route-rowKey="@customer.RowKey"
                               class="btn btn-sm btn-outline-warning" title="Edit">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete"
                               asp-route-partitionKey="@customer.PartitionKey"
                               asp-route-rowKey="@customer.RowKey"
                               class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <h4 class="alert-heading">No customers found!</h4>
        <p>You haven't added any customers yet. Click the "Add New Customer" button above to get started.</p>
    </div>
}