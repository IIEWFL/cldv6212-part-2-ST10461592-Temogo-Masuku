@model ABC_Retail.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
                </h4>
                <p>Are you sure you want to delete this customer? This action cannot be undone.</p>
            </div>
        </div>
    </div>

    <div class="row">

        <!-- Customer Photo and Basic Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.CustomerPhotoUrl))
                    {
                        <img src="@Model.CustomerPhotoUrl" alt="@Model.Name @Model.Surname"
                             class="rounded-circle mb-3" style="width:120px; height:120px; object-fit:cover;" />
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width:120px; height:120px; color:white; font-size:36px; font-weight:bold;">
                            @(Model.Name?.Substring(0, 1) ?? "")@(Model.Surname?.Substring(0, 1) ?? "")
                        </div>
                    }

                    <h4>@Model.Name @Model.Surname</h4>
                </div>
            </div>
        </div>

        <!-- Customer Details -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
                        {
                            <dt class="col-sm-4">Phone:</dt>
                            <dd class="col-sm-8">@Model.PhoneNumber</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.StreetAddress))
                        {
                            <dt class="col-sm-4">Address:</dt>
                            <dd class="col-sm-8">@Model.StreetAddress</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.City))
                        {
                            <dt class="col-sm-4">City:</dt>
                            <dd class="col-sm-8">@Model.City</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Province))
                        {
                            <dt class="col-sm-4">Province:</dt>
                            <dd class="col-sm-8">@Model.Province</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.PostalCode))
                        {
                            <dt class="col-sm-4">Postal Code:</dt>
                            <dd class="col-sm-8">@Model.PostalCode</dd>
                        }

                        <dt class="col-sm-4">Country:</dt>
                        <dd class="col-sm-8">@(Model.Country ?? "South Africa")</dd>
                    </dl>
                </div>
            </div>

            <!-- Azure Storage Information -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6 class="mb-0">Azure Storage Information</h6>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Partition Key:</dt>
                        <dd class="col-sm-8"><code>@Model.PartitionKey</code></dd>

                        <dt class="col-sm-4">Row Key:</dt>
                        <dd class="col-sm-8"><code>@Model.RowKey</code></dd>

                        <dt class="col-sm-4">Timestamp:</dt>
                        <dd class="col-sm-8">@Model.Timestamp?.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                        @if (!string.IsNullOrEmpty(Model.CustomerPhotoUrl))
                        {
                            <dt class="col-sm-4">Photo Storage:</dt>
                            <dd class="col-sm-8">
                                <small class="text-muted">Azure Blob Storage</small><br />
                                <small><code>@Model.CustomerPhotoUrl</code></small>
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Warning Message -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <h6>
                    <i class="bi bi-info-circle-fill"></i> What will be deleted:
                </h6>
                <ul class="mb-0">
                    <li>Customer record from Azure Table Storage</li>
                    @if (!string.IsNullOrEmpty(Model.CustomerPhotoUrl))
                    {
                        <li>Profile photo from Azure Blob Storage</li>
                    }
                    <li>All associated data cannot be recovered</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="PartitionKey" />
                <input type="hidden" asp-for="RowKey" />
                <button type="submit" class="btn btn-danger me-2"
                        onclick="return confirm('Are you sure? This action cannot be undone!')">
                    <i class="bi bi-trash-fill"></i> Yes, Delete Customer
                </button>
            </form>

            <a asp-action="Details"
               asp-route-partitionKey="@Model.PartitionKey"
               asp-route-rowKey="@Model.RowKey"
               class="btn btn-secondary me-2">
                <i class="bi bi-eye"></i> View Details
            </a>

            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>